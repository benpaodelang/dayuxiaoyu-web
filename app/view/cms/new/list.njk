{% set active = "new" %}
{% extends "../template.njk" %}
{% import "../macro.njk" as fragment %}
{% block body %}

<div class="container con-in">

    <!-- 焦点图 -->
    <div class="slides slinde-h2">

        {% for slider in sliderList.data.list %}
        <div style="background-image:url({{slider.image}})">
            <h1><p></p></h1><a href="{{slider.url}}" target="_blank"></a>
        </div>
        {% endfor %}
    </div>
    <!-- /焦点图 -->

    <div class="maincon">

        <!-- 新闻 -->
        <div class="margin-bottom-20">
            <h1 class="tit">
                <p>
                    <ss><i class="icon iconfont icon-xinwenzixun"></i></ss>
                    新闻资讯
                </p>
            </h1>
            <ul class="news new-ind">

                {% for new in newList.data.list %}
                <li>
                    <ss><strong>{{helper.timeFormat(new.createTime,'DD')}}</strong>{{helper.timeFormat(new.createTime,'YYYY.MM')}}
                    </ss>
                    <h1><a href="/new/detail?id={{new.id}}" target="_blank">{{new.title}}</a></h1>
                    <p>{{new.description}}</p>
                </li>
                {% endfor %}
            </ul>
        </div>


        <div class="text-center margin-top-30">
            <ul class="pagination">
                {% if newList.data.currentPage > 1 %}
                <li class="paginate_button previous disabled" aria-controls="example-2" tabindex="0"><a href="/new?pageNo={{ newList.data.currentPage-1 }}">Previous</a>
                </li>
                {% endif %}

                {% for i in range(1, newList.data.totalPage+1) -%}
                <li class="paginate_button {% if i==newList.data.currentPage %}active{% endif %}" aria-controls="example-2" tabindex="0"><a href="/new?pageNo={{i}}">{{i}}</a></li>
                {%- endfor %}

                {% if newList.data.currentPage <= newList.data.totalPage %}
                {% if newList.data.currentPage != newList.data.totalPage %}
                <li class="paginate_button next" aria-controls="example-2" tabindex="0"><a href="/new?pageNo={{newList.data.currentPage+1}}">Next</a></li>
                {% endif %}
                {% endif %}
            </ul>
        </div>
        <!-- /新闻 -->

    </div>
</div>

{% endblock %}