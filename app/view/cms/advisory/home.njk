{% set active = "index" %}
{% extends "../template.njk" %}
{% import "../macro.njk" as fragment %}
{% block body %}



<div class="container con-in">
    <!-- 焦点图 -->
    <div class="slides-toppic2">
        <img src="/public/images/h-b-2.jpg" alt="">
    </div>
    <!-- /焦点图 -->

    <div class="maincon">

        <!-- 房产 -->
        <div class="">
            <h1 class="tit">
                <p>
                    <ss><i class="icon iconfont icon-icon-test6"></i></ss>
                    移民评估
                </p>
            </h1>

            <div class="sub-tit">
                <p></p>

            </div>
            <form class="form-horizontal">
                <div class="row">
                    <div class="col-md-10">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">姓名：</label>
                            <div class="col-sm-9">
                                <input type="text" id="advisoryName" class="form-control ">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">手机号：</label>
                            <div class="col-sm-9">
                                <input type="text" id="advisoryPhone" class="form-control ">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">意向国家：</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="advisoryCountry">
                                {% for country in countryList.data.list %}
                                <option value="{{country.id}}">{{country.name}}</option>
                                {% endfor %}
                                </select>

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">投资预算：</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="advisoryPriceRequest">
                                    <option value="">￥100万-300万</option>
                                    <option value="">￥301万-500万</option>
                                    <option value="">￥501万-800万</option>
                                    <option value="">￥801万-1000万</option>
                                    <option value="">￥1000万以上</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">移民需求：</label>
                            <div class="col-sm-9">
                                <div class="checkbox-inline"><label><input type="checkbox"> 子女教育 </label></div>
                                <div class="checkbox-inline"><label><input type="checkbox"> 医疗福利 </label></div>
                                <div class="checkbox-inline"><label><input type="checkbox"> 资产配置 </label></div>
                                <div class="checkbox-inline"><label><input type="checkbox"> 工作机会 </label></div>
                                <div class="checkbox-inline"><label><input type="checkbox"> 生活环境 </label></div>
                                <div class="checkbox-inline"><label><input type="checkbox"> 定居养老 </label></div>
                                <div class="checkbox-inline"><label><input type="checkbox"> 合理避税 </label></div>
                                <div class="checkbox-inline"><label><input type="checkbox"> 出行畅通 </label></div>
                                <div class="checkbox-inline"><label><input type="checkbox"> 海外业务 </label></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">时间要求：</label>
                            <div class="col-sm-9">
                                <select name="select" class="form-control" id="advisoryTimeRequest">
                                    <option value="cheese">1个月</option>
                                    <option value="tomatoes">1-3个月</option>
                                    <option value="mozarella">3-6个月</option>
                                    <option value="tomatoes">6-12个月</option>
                                    <option value="mushrooms">12个月以上</option>
                                    <option value="pepperoni">24个月以上</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">政治面貌：</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="advisoryPolitical">
                                    <option value="">中共党员</option>
                                    <option value="">其他民主党派</option>
                                    <option value="">无党派人士</option>
                                    <option value="">群众</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">可承受风险：</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="advisoryRiskTolerance">
                                    <option value="">低风险</option>
                                    <option value="">中风险</option>
                                    <option value="">高风险</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">最高学历：</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="advisoryEducation">
                                    <option value="">硕士及以上</option>
                                    <option value="">大学本科</option>
                                    <option value="">高中及以下</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">经历：</label>
                            <div class="col-sm-9">
                                <div class="checkbox-inline"><label><input type="checkbox"> 有留学经历 </label></div>
                                <div class="checkbox-inline"><label><input type="checkbox"> 有经商经历 </label></div>
                                <div class="checkbox-inline"><label><input type="checkbox"> 有海外生活经历 </label></div>
                                <div class="checkbox-inline"><label><input type="checkbox"> 有海外旅游经历 </label></div>
                                <div class="checkbox-inline"><label><input type="checkbox"> 有海外工作经历 </label></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">英语成绩：</label>
                            <div class="col-sm-9">
                                <div class="checkbox-inline"><label><input type="checkbox"> 雅思 </label></div>
                                <div class="checkbox-inline"><label><input type="checkbox"> 托福 </label></div>
                                <div class="checkbox-inline"><label><input type="checkbox"> 大学英语4级 </label></div>
                                <div class="checkbox-inline"><label><input type="checkbox"> 大学英语6级 </label></div>
                                <div class="checkbox-inline"><label><input type="checkbox"> 英语8级 </label></div>
                                <div class="checkbox-inline"><label><input type="checkbox"> 其他 </label></div>
                            </div>
                        </div>

                    </div>

                </div>
            </form>
            <div class="text-center margin-top-15">
                <button  id="advisorySubmit" class="button button-highlight button-normal" data-toggle="modal"
                        data-target="#modal1">预约办理
                </button>
            </div>
        </div>

        <script>
        $(document).ready(function(){
                $("#advisorySubmit").click(function(){
                    var request = {};
                    request.advisoryCountry = $("#advisoryCountry").val();
                    request.advisoryName = $("#advisoryName").val();
                    request.advisoryPhone = $("#advisoryPhone").val();
                    request.advisoryImmigrationRequest = $("#advisoryImmigrationRequest").val();
                    request.advisoryTimeRequest = $("#advisoryTimeRequest").val();
                    request.advisoryPriceRequest = $("#advisoryPriceRequest").val();
                    request.advisoryEducation = $("#advisoryEducation").val();
                    request.advisoryPolitical = $("#advisoryPolitical").val();
                    request.advisoryOverseasExperience = $("#advisoryOverseasExperience").val();
                    request.advisoryRiskTolerance = $("#advisoryRiskTolerance").val();
                    request.advisoryEnglish = $("#advisoryEnglish").val();
                    $.post("/submit?_csrf={{ ctx.csrf | safe }}", request,
                              function(data){
                              alert("提交成功,请等待客服回访")
                              });

                })
            })
        </script>


        <!-- /房产 -->

    </div>
</div>

{% endblock %}